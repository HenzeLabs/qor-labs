{% comment %}
  Category Grid Section â€” Rapha-inspired design
  Editorial collection cards with image overlays
  Mobile: 1 column | Tablet: 2 columns | Desktop: 2-3 columns
{% endcomment %}

<section
  class="py-12 md:py-24 bg-white"
  aria-labelledby="CategoryGrid-{{ section.id }}"
>
  <div class="max-w-7xl mx-auto px-4 md:px-8">
    {%- comment -%} Section Header {%- endcomment -%}
    {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
      <div class="text-center mb-10 md:mb-16">
        {%- if section.settings.subheading != blank -%}
          <p class="text-[11px] uppercase tracking-[0.15em] font-medium text-[#6B6B6B] mb-3">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h2
            id="CategoryGrid-{{ section.id }}"
            class="font-display text-3xl md:text-4xl text-[#1A1A1A]"
          >
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- comment -%} Collection Grid {%- endcomment -%}
    <div class="grid grid-cols-1 md:grid-cols-2 {% if section.settings.columns == '3' %}lg:grid-cols-3{% endif %} gap-4 md:gap-6">
      {%- for block in section.blocks -%}
        {%- liquid
          assign collection = block.settings.collection
          assign has_collection = false
          if collection != blank and collection.handle != blank
            assign has_collection = true
          endif
        -%}

        <a
          href="{% if has_collection %}{{ collection.url }}{% else %}#{% endif %}"
          class="group relative block overflow-hidden {% if section.settings.aspect_ratio == '16:9' %}aspect-video{% elsif section.settings.aspect_ratio == '4:3' %}aspect-[4/3]{% else %}aspect-[3/2]{% endif %}"
          {{ block.shopify_attributes }}
          {% unless has_collection %}aria-disabled="true"{% endunless %}
        >
          {%- comment -%} Background Image {%- endcomment -%}
          <div class="absolute inset-0">
            {%- if block.settings.image != blank -%}
              <img
                src="{{ block.settings.image | image_url: width: 1200 }}"
                srcset="
                  {{ block.settings.image | image_url: width: 400 }} 400w,
                  {{ block.settings.image | image_url: width: 800 }} 800w,
                  {{ block.settings.image | image_url: width: 1200 }} 1200w
                "
                sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
                alt="{{ block.settings.image.alt | default: block.settings.title | escape }}"
                loading="lazy"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-[1.03]"
              >
            {%- elsif has_collection and collection.image != blank -%}
              <img
                src="{{ collection.image | image_url: width: 1200 }}"
                srcset="
                  {{ collection.image | image_url: width: 400 }} 400w,
                  {{ collection.image | image_url: width: 800 }} 800w,
                  {{ collection.image | image_url: width: 1200 }} 1200w
                "
                sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
                alt="{{ collection.image.alt | default: collection.title | escape }}"
                loading="lazy"
                width="{{ collection.image.width }}"
                height="{{ collection.image.height }}"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-[1.03]"
              >
            {%- else -%}
              {%- comment -%} Placeholder {%- endcomment -%}
              <div class="w-full h-full bg-[#E8E6E1] flex items-center justify-center">
                <svg class="w-16 h-16 text-[#9B9B9B]" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
            {%- endif -%}
          </div>

          {%- comment -%} Dark Gradient Overlay {%- endcomment -%}
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent transition-opacity duration-300 group-hover:opacity-90"></div>

          {%- comment -%} Content Overlay {%- endcomment -%}
          <div class="absolute inset-0 flex flex-col justify-end p-6 md:p-8">
            {%- comment -%} Category Label {%- endcomment -%}
            {%- assign display_title = block.settings.title | default: collection.title -%}
            {%- if display_title != blank -%}
              <h3 class="text-[13px] md:text-sm uppercase tracking-[0.2em] font-medium text-white mb-2">
                {{ display_title }}
              </h3>
            {%- endif -%}

            {%- comment -%} Optional Description {%- endcomment -%}
            {%- if block.settings.description != blank -%}
              <p class="font-display text-lg md:text-xl text-white/90 mb-4 max-w-md">
                {{ block.settings.description }}
              </p>
            {%- endif -%}

            {%- comment -%} CTA Link {%- endcomment -%}
            {%- if has_collection -%}
              <span class="inline-flex items-center text-[12px] uppercase tracking-[0.15em] text-white/90 group-hover:text-white transition-colors">
                Shop Now
                <svg class="w-4 h-4 ml-2 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </span>
            {%- endif -%}
          </div>
        </a>
      {%- endfor -%}
    </div>

    {%- comment -%} Optional View All Link {%- endcomment -%}
    {%- if section.settings.show_view_all -%}
      <div class="text-center mt-10 md:mt-14">
        <a
          href="{{ routes.collections_url }}"
          class="inline-block uppercase tracking-[0.15em] text-[13px] font-medium text-[#1A1A1A] underline underline-offset-4 hover:opacity-70 transition-opacity"
        >
          {{ section.settings.view_all_text | default: 'View All Collections' }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Category Grid",
  "tag": "section",
  "class": "category-grid-section",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Shop by Category"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Laboratory Essentials"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Desktop Columns",
      "default": "3",
      "options": [
        { "value": "2", "label": "2 columns" },
        { "value": "3", "label": "3 columns" }
      ]
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Image Aspect Ratio",
      "default": "4:3",
      "options": [
        { "value": "16:9", "label": "16:9 (Wide)" },
        { "value": "4:3", "label": "4:3 (Standard)" },
        { "value": "3:2", "label": "3:2 (Classic)" }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' Link",
      "default": false
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View All Text",
      "default": "View All Collections"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom Image",
          "info": "Overrides collection image if set"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Custom Title",
          "info": "Overrides collection title if set"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "info": "Optional tagline displayed below title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Grid",
      "blocks": [
        { "type": "category" },
        { "type": "category" },
        { "type": "category" }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
