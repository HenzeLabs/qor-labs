{%- comment -%}
  SECTION: Trust Bar
  RAPHA-EXACT values from RAPHA-SOURCE-ANALYSIS.md Section 12
  Clean horizontal strip with trust signals.
{%- endcomment -%}

<section id="TrustBar-{{ section.id }}" class="trust-bar">
  <div class="trust-bar__container">
    <div class="trust-bar__grid">
      {%- for block in section.blocks -%}
        <div class="trust-item" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != 'none' -%}
            <div class="trust-item-icon">
              {%- case block.settings.icon -%}
                {%- when 'shipping' -%}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="1" y="3" width="15" height="13"></rect>
                    <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                    <circle cx="5.5" cy="18.5" r="2.5"></circle>
                    <circle cx="18.5" cy="18.5" r="2.5"></circle>
                  </svg>
                {%- when 'warranty' -%}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                    <polyline points="9 12 11 14 15 10"></polyline>
                  </svg>
                {%- when 'clock' -%}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                  </svg>
                {%- when 'support' -%}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                  </svg>
                {%- when 'star' -%}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                  </svg>
                {%- when 'check' -%}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                  </svg>
              {%- endcase -%}
            </div>
          {%- endif -%}
          <div class="trust-item__text">
            {%- if block.settings.label != blank -%}
              <h4 class="trust-item-title">{{ block.settings.label }}</h4>
            {%- endif -%}
            {%- if block.settings.description != blank -%}
              <p class="trust-item-description">{{ block.settings.description }}</p>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  /* =====================================
     TRUST BAR - RAPHA EXACT VALUES
     Source: RAPHA-SOURCE-ANALYSIS.md Section 12
     ===================================== */

  .trust-bar {
    background-color: #FFFFFF;
    padding: 32px 0;                          /* RAPHA EXACT */
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);  /* RAPHA EXACT */
  }

  .trust-bar__container {
    max-width: none;
    margin: 0 auto;
    padding: 0 16px;                          /* RAPHA mobile */
  }

  @media (min-width: 768px) {
    .trust-bar__container {
      padding: 0 32px;                        /* RAPHA desktop */
    }
  }

  /* RAPHA EXACT: grid 4 cols, gap 24px */
  .trust-bar__grid {
    display: grid;
    grid-template-columns: 1fr;               /* Mobile: stack */
    gap: 24px;                                /* RAPHA EXACT */
  }

  @media (min-width: 768px) {
    .trust-bar__grid {
      grid-template-columns: repeat(2, 1fr);  /* Tablet: 2 cols */
    }
  }

  @media (min-width: 992px) {
    .trust-bar__grid {
      grid-template-columns: repeat(4, 1fr);  /* RAPHA EXACT: 4 cols */
    }
  }

  /* RAPHA EXACT: flex with 16px gap */
  .trust-item {
    display: flex;
    gap: 16px;                                /* RAPHA EXACT */
    align-items: flex-start;
  }

  /* RAPHA EXACT: icon 24x24 */
  .trust-item-icon {
    width: 24px;                              /* RAPHA EXACT */
    height: 24px;                             /* RAPHA EXACT */
    flex-shrink: 0;
    color: #000000;
  }

  .trust-item-icon svg {
    width: 100%;
    height: 100%;
  }

  .trust-item__text {
    display: flex;
    flex-direction: column;
  }

  /* RAPHA EXACT: 14px/600/uppercase/0.3px */
  .trust-item-title {
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;                          /* RAPHA EXACT */
    font-weight: 600;                         /* RAPHA EXACT */
    text-transform: uppercase;
    letter-spacing: 0.3px;                    /* RAPHA EXACT */
    color: #000000;
    margin: 0 0 8px;                          /* RAPHA EXACT */
    line-height: 1.2;
  }

  /* RAPHA EXACT: 12px/400/line-height 21px */
  .trust-item-description {
    font-family: 'DM Sans', sans-serif;
    font-size: 12px;                          /* RAPHA EXACT */
    font-weight: 400;                         /* RAPHA EXACT */
    line-height: 21px;                        /* RAPHA EXACT */
    color: #6B6B6B;
    margin: 0;                                /* RAPHA EXACT */
  }
</style>

