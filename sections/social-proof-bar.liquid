{%- style -%}
  .social-proof-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .social-proof-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .social-proof-{{ section.id }} .social-proof__list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 0.75rem;
  }
  @media screen and (min-width: 750px) {
    .social-proof-{{ section.id }} .social-proof__list {
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      align-items: center;
      gap: 1rem 1.5rem;
    }
  }
  .social-proof-{{ section.id }} .social-proof__item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 0.75rem 1rem;
    border-radius: 0.75rem;
    background: rgba(0, 0, 0, 0.03);
  }
  .social-proof-{{ section.id }} .social-proof__item strong {
    font-size: 1rem;
  }
  .social-proof-{{ section.id }} .social-proof__item span {
    font-size: 0.9rem;
    color: rgba(0, 0, 0, 0.7);
  }
{%- endstyle -%}

<section class="social-proof-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="h3">{{ section.settings.heading }}</h2>
    {%- endif -%}
    <ul class="social-proof__list">
      {%- for block in section.blocks -%}
        <li class="social-proof__item" {{ block.shopify_attributes }}>
          {%- if block.settings.title != blank -%}
            <strong>{{ block.settings.title }}</strong>
          {%- endif -%}
          {%- if block.settings.text != blank -%}
            <span>{{ block.settings.text }}</span>
          {%- endif -%}
        </li>
      {%- endfor -%}
    </ul>
  </div>
</section>

{% schema %}
{
  "name": "Social proof bar",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Trusted by busy labs"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 24
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "24-hour shipping"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Most orders ship next business day."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Social proof bar",
      "blocks": [
        { "type": "item" },
        { "type": "item" },
        { "type": "item" }
      ]
    }
  ]
}
{% endschema %}
