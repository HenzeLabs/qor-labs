{{ 'component-card.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .blog-top-guides-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .blog-top-guides-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .blog-top-guides-{{ section.id }} .blog-top-guides__grid {
    display: grid;
    gap: 1.5rem;
  }
  @media screen and (min-width: 750px) {
    .blog-top-guides-{{ section.id }} .blog-top-guides__grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }
{%- endstyle -%}

<section class="blog-top-guides-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="{{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
    {%- endif -%}
    {%- if section.settings.subheading != blank -%}
      <p class="rte">{{ section.settings.subheading }}</p>
    {%- endif -%}
    <div class="blog-top-guides__grid">
      {%- for block in section.blocks -%}
        {%- if block.settings.article != blank -%}
          <div {{ block.shopify_attributes }}>
            {% render 'article-card', article: block.settings.article, show_date: true, show_author: false, show_excerpt: true %}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Blog top guides",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Start here"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Buyer guides and practical workflows for clinical and research labs."
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "default": "h2",
      "options": [
        { "value": "h2", "label": "Medium" },
        { "value": "h3", "label": "Small" }
      ]
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "guide",
      "name": "Guide",
      "settings": [
        {
          "type": "article",
          "id": "article",
          "label": "Article"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Blog top guides",
      "blocks": [
        { "type": "guide" },
        { "type": "guide" },
        { "type": "guide" }
      ]
    }
  ]
}
{% endschema %}
