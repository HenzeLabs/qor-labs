{%- comment -%}
  SECTION: Editorial Hero (Rapha Pattern)
  Pure full-bleed image + separate white content section below.
  NO text overlay on image - let imagery speak for itself.
{%- endcomment -%}

{%- liquid
  assign hero_height = section.settings.hero_height
-%}

{%- comment -%} PART 1: Pure Hero Image {%- endcomment -%}
<section
  id="Hero-{{ section.id }}"
  class="hero-rapha"
  style="--hero-height: {{ hero_height }}vh;"
>
  <div class="hero-rapha__media">
    {%- if section.settings.image != blank -%}
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        srcset="
          {{ section.settings.image | image_url: width: 750 }} 750w,
          {{ section.settings.image | image_url: width: 1200 }} 1200w,
          {{ section.settings.image | image_url: width: 1920 }} 1920w,
          {{ section.settings.image | image_url: width: 2560 }} 2560w
        "
        sizes="100vw"
        alt="{{ section.settings.image.alt | default: section.settings.heading | escape }}"
        loading="{% if section.index == 1 %}eager{% else %}lazy{% endif %}"
        fetchpriority="{% if section.index == 1 %}high{% else %}auto{% endif %}"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
        class="hero-rapha__image"
      >
    {%- else -%}
      <div class="hero-rapha__placeholder">
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {%- endif -%}
  </div>
</section>

{%- comment -%} PART 2: Content Section Below Image {%- endcomment -%}
<section class="hero-rapha__content-section">
  <div class="hero-rapha__content-inner">
    {%- if section.settings.heading != blank -%}
      <h1 class="hero-rapha__heading">
        {{ section.settings.heading }}
      </h1>
    {%- endif -%}

    {%- if section.settings.subheading != blank -%}
      <p class="hero-rapha__subheading">
        {{ section.settings.subheading }}
      </p>
    {%- endif -%}

    {%- if section.settings.button_label != blank -%}
      <div class="hero-rapha__buttons">
        <a
          href="{{ section.settings.button_link | default: '#' }}"
          class="hero-rapha__btn hero-rapha__btn--primary"
        >
          {{ section.settings.button_label }}
        </a>

        {%- if section.settings.button_label_2 != blank -%}
          <a
            href="{{ section.settings.button_link_2 | default: '#' }}"
            class="hero-rapha__btn hero-rapha__btn--secondary"
          >
            {{ section.settings.button_label_2 }}
          </a>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  /* ==========================================================================
     HERO IMAGE SECTION - Pure full-bleed, no overlay
     ========================================================================== */

  .hero-rapha {
    position: relative;
    width: 100%;
    height: var(--hero-height, 70vh);
    overflow: hidden;
  }

  .hero-rapha__media {
    width: 100%;
    height: 100%;
  }

  .hero-rapha__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-rapha__placeholder {
    width: 100%;
    height: 100%;
    background-color: #E8E6E1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-rapha__placeholder svg {
    width: 30%;
    height: auto;
    opacity: 0.2;
  }

  /* ==========================================================================
     CONTENT SECTION - White background below image (Rapha pattern)
     ========================================================================== */

  .hero-rapha__content-section {
    background-color: #FFFFFF;
    padding: 48px 24px;
    text-align: center;
  }

  .hero-rapha__content-inner {
    max-width: 720px;
    margin: 0 auto;
  }

  .hero-rapha__heading {
    font-family: var(--font-heading-family, 'Assistant', sans-serif);
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    line-height: 1.1;
    color: #0A0A0A;
    margin: 0 0 16px;
  }

  .hero-rapha__subheading {
    font-family: var(--font-body-family, 'Assistant', sans-serif);
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: #4A4A4A;
    margin: 0 0 28px;
    font-style: italic;
  }

  .hero-rapha__buttons {
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: center;
  }

  .hero-rapha__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-body-family, 'Assistant', sans-serif);
    font-size: 13px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: none;
    padding: 16px 48px;
    min-width: 200px;
    transition: all 0.2s ease;
  }

  .hero-rapha__btn--primary {
    background-color: #0A0A0A;
    color: #FFFFFF;
    border: none;
  }

  .hero-rapha__btn--primary:hover {
    background-color: #333333;
  }

  .hero-rapha__btn--secondary {
    background-color: #FFFFFF;
    color: #0A0A0A;
    border: 1px solid #0A0A0A;
  }

  .hero-rapha__btn--secondary:hover {
    background-color: #0A0A0A;
    color: #FFFFFF;
  }

  /* Tablet and up */
  @media (min-width: 768px) {
    .hero-rapha__content-section {
      padding: 56px 40px;
    }

    .hero-rapha__heading {
      font-size: clamp(2rem, 4vw, 3rem);
    }

    .hero-rapha__subheading {
      font-size: 1.125rem;
    }

    .hero-rapha__buttons {
      flex-direction: row;
      justify-content: center;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .hero-rapha__content-section {
      padding: 64px 40px;
    }
  }
</style>

{% schema %}
{
  "name": "Editorial Hero",
  "tag": "div",
  "class": "section-hero-editorial",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image",
      "info": "Full-bleed, edge-to-edge. Recommended: 1920x1080px or larger."
    },
    {
      "type": "range",
      "id": "hero_height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Image height",
      "default": 70
    },
    {
      "type": "header",
      "content": "Content (appears below image)"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "PRECISION LAB EQUIPMENT"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Reliable instruments for clinical and research workflows."
    },
    {
      "type": "header",
      "content": "Primary button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Secondary button"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Editorial Hero",
      "settings": {
        "heading": "PRECISION LAB EQUIPMENT",
        "subheading": "Reliable instruments for clinical and research workflows.",
        "button_label": "Shop Now"
      }
    }
  ]
}
{% endschema %}
