{%- comment -%}
  SECTION: Editorial Hero
  Full-bleed hero with text OVERLAID on image (bottom-left).
  RAPHA-EXACT values from RAPHA-SOURCE-ANALYSIS.md
{%- endcomment -%}

{%- liquid
  assign hero_height = section.settings.hero_height | default: 85
-%}

<section
  id="Hero-{{ section.id }}"
  class="hero-editorial"
  style="--hero-height: {{ hero_height }}vh;"
>
  {%- comment -%} Background Image {%- endcomment -%}
  <div class="hero-editorial__media">
    {%- if section.settings.image != blank -%}
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        srcset="
          {{ section.settings.image | image_url: width: 750 }} 750w,
          {{ section.settings.image | image_url: width: 1200 }} 1200w,
          {{ section.settings.image | image_url: width: 1920 }} 1920w,
          {{ section.settings.image | image_url: width: 2560 }} 2560w
        "
        sizes="100vw"
        alt="{{ section.settings.image.alt | default: section.settings.heading | escape }}"
        loading="eager"
        fetchpriority="high"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
        class="hero-editorial__image"
      >
    {%- else -%}
      {%- comment -%} Clean placeholder - bg gray with centered text {%- endcomment -%}
      <div class="hero-editorial__placeholder">
        <span class="hero-editorial__placeholder-text">Hero Image</span>
      </div>
    {%- endif -%}
  </div>

  {%- comment -%} RAPHA EXACT: gradient overlay 0.3 max {%- endcomment -%}
  <div class="hero-editorial__overlay"></div>

  {%- comment -%} Text Content - Positioned Bottom Left {%- endcomment -%}
  <div class="hero-editorial__content">
    {%- if section.settings.overline != blank -%}
      <span class="hero-editorial__overline">
        {{ section.settings.overline }}
      </span>
    {%- endif -%}

    {%- if section.settings.heading != blank -%}
      <h1 class="hero-editorial__heading">
        {{ section.settings.heading }}
      </h1>
    {%- endif -%}

    {%- if section.settings.subheading != blank -%}
      <p class="hero-editorial__subheading">
        {{ section.settings.subheading }}
      </p>
    {%- endif -%}

    {%- if section.settings.button_label != blank -%}
      <div class="hero-editorial__buttons">
        <a
          href="{{ section.settings.button_link | default: '#' }}"
          class="hero-editorial__btn"
        >
          {{ section.settings.button_label }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  /* =====================================
     HERO EDITORIAL - RAPHA EXACT VALUES
     Source: RAPHA-SOURCE-ANALYSIS.md
     ===================================== */

  .hero-editorial {
    position: relative;
    width: 100vw;
    min-height: var(--hero-height, 85vh);
    overflow: hidden;
  }

  .hero-editorial__media {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .hero-editorial__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    /* RAPHA: GPU acceleration */
    transform: translate3d(0, 0, 0);
    backface-visibility: hidden;
  }

  /* RAPHA EXACT: placeholder #F5F5F5 */
  .hero-editorial__placeholder {
    width: 100%;
    height: 100%;
    background-color: #F5F5F5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-editorial__placeholder-text {
    font-family: 'DM Sans', sans-serif;
    font-size: 16px;
    font-weight: 400;
    color: #949494;
    text-align: center;
  }

  /* RAPHA EXACT: gradient overlay 0.3 max, to top */
  .hero-editorial__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.3) 0%,
      transparent 50%
    );
    pointer-events: none;
  }

  /* RAPHA: content padding 16px mobile, 32px desktop */
  .hero-editorial__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 32px 16px;
    z-index: 10;
  }

  @media (min-width: 768px) {
    .hero-editorial__content {
      padding: 40px 32px;
    }
  }

  /* Overline - RAPHA: 14px/600/0.3px uppercase (same as button) */
  .hero-editorial__overline {
    display: block;
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3px;
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 16px;
  }

  /* Heading - Qor Labs: Instrument Serif for editorial feel, NOT uppercase */
  .hero-editorial__heading {
    font-family: 'Instrument Serif', Georgia, serif;
    font-size: 40px;              /* Mobile */
    font-weight: 400;             /* Serif looks better at regular weight */
    line-height: 1.1;
    letter-spacing: normal;
    text-transform: none;         /* Mixed case for editorial feel */
    color: #FFFFFF;
    margin: 0 0 16px;
  }

  @media (min-width: 992px) {
    .hero-editorial__heading {
      font-size: 56px;            /* Large but readable serif */
      line-height: 1.1;
    }
  }

  /* Subheading - RAPHA EXACT: 24px/400 serif, line-height 36px */
  .hero-editorial__subheading {
    font-family: 'Instrument Serif', Georgia, serif;
    font-size: 18px;              /* Mobile */
    font-weight: 400;             /* RAPHA EXACT */
    line-height: 27px;
    color: rgba(255, 255, 255, 0.85);
    margin: 0 0 24px;
    max-width: 500px;
  }

  @media (min-width: 992px) {
    .hero-editorial__subheading {
      font-size: 24px;            /* RAPHA EXACT desktop */
      line-height: 36px;          /* RAPHA EXACT */
    }
  }

  /* RAPHA: button gap 16px */
  .hero-editorial__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }

  /* Button - RAPHA EXACT: 14px/600, 12px padding, 40px min-height */
  .hero-editorial__btn {
    box-sizing: border-box;
    display: inline-flex;
    align-items: center;
    justify-content: center;

    /* RAPHA typography */
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;              /* RAPHA EXACT */
    font-weight: 600;             /* RAPHA EXACT */
    line-height: 14px;
    letter-spacing: normal;       /* RAPHA EXACT - NOT 0.3px */
    text-transform: uppercase;
    text-decoration: none;
    text-align: center;

    /* RAPHA sizing */
    padding: 12px;                /* RAPHA EXACT */
    min-height: 40px;             /* RAPHA EXACT */
    min-width: 0;                 /* RAPHA EXACT - no minimum */

    /* Hero inverted colors (white bg on dark image) */
    background-color: #FFFFFF;
    color: #000000;
    border: none;                 /* RAPHA EXACT */
    border-radius: 0;             /* RAPHA EXACT */
    cursor: pointer;

    /* RAPHA transition */
    transition: background-color 250ms ease-in-out;
  }

  /* Hover - Qor green accent (Rapha uses pink) */
  .hero-editorial__btn:hover {
    background-color: #2D5A3D;
    color: #FFFFFF;
  }
</style>

{% schema %}
{
  "name": "Editorial Hero",
  "tag": "section",
  "class": "section-hero-editorial",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image",
      "info": "Recommended: 1920x1080px or larger"
    },
    {
      "type": "range",
      "id": "hero_height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Hero height",
      "default": 85
    },
    {
      "type": "text",
      "id": "overline",
      "label": "Overline",
      "default": "Laboratory Essentials"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Precision Lab Equipment"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Reliable instruments for clinical and research workflows."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Editorial Hero"
    }
  ]
}
{% endschema %}
