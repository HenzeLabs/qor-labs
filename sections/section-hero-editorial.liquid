{%- comment -%}
  SECTION: Editorial Hero
  Full-bleed hero with text OVERLAID on image (bottom-left).
  Dark gradient overlay for text legibility.
{%- endcomment -%}

{%- liquid
  assign hero_height = section.settings.hero_height | default: 85
-%}

<section
  id="Hero-{{ section.id }}"
  class="hero-editorial"
  style="--hero-height: {{ hero_height }}vh;"
>
  {%- comment -%} Background Image {%- endcomment -%}
  <div class="hero-editorial__media">
    {%- if section.settings.image != blank -%}
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        srcset="
          {{ section.settings.image | image_url: width: 750 }} 750w,
          {{ section.settings.image | image_url: width: 1200 }} 1200w,
          {{ section.settings.image | image_url: width: 1920 }} 1920w,
          {{ section.settings.image | image_url: width: 2560 }} 2560w
        "
        sizes="100vw"
        alt="{{ section.settings.image.alt | default: section.settings.heading | escape }}"
        loading="eager"
        fetchpriority="high"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
        class="hero-editorial__image"
      >
    {%- else -%}
      <div class="hero-editorial__placeholder"></div>
    {%- endif -%}
  </div>

  {%- comment -%} Dark Gradient Overlay {%- endcomment -%}
  <div class="hero-editorial__overlay"></div>

  {%- comment -%} Text Content - Positioned Bottom Left {%- endcomment -%}
  <div class="hero-editorial__content">
    {%- if section.settings.overline != blank -%}
      <span class="hero-editorial__overline">
        {{ section.settings.overline }}
      </span>
    {%- endif -%}

    {%- if section.settings.heading != blank -%}
      <h1 class="hero-editorial__heading">
        {{ section.settings.heading }}
      </h1>
    {%- endif -%}

    {%- if section.settings.subheading != blank -%}
      <p class="hero-editorial__subheading">
        {{ section.settings.subheading }}
      </p>
    {%- endif -%}

    {%- if section.settings.button_label != blank -%}
      <div class="hero-editorial__buttons">
        <a
          href="{{ section.settings.button_link | default: '#' }}"
          class="hero-editorial__btn"
        >
          {{ section.settings.button_label }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  /* ===================================
     HERO EDITORIAL - Rapha-exact values
     Source: RAPHA-SOURCE-ANALYSIS.md
     =================================== */

  .hero-editorial {
    position: relative;
    width: 100vw;
    min-height: var(--hero-height, 85vh);
    overflow: hidden;
  }

  .hero-editorial__media {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .hero-editorial__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    /* Rapha: GPU acceleration */
    transform: translate3d(0, 0, 0);
    backface-visibility: hidden;
  }

  .hero-editorial__placeholder {
    width: 100%;
    height: 100%;
    background-color: #F5F5F5; /* Rapha placeholder gray */
  }

  /* Rapha: minimal overlay - 0.3 max, not 0.6 */
  .hero-editorial__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.3) 0%,
      transparent 50%
    );
    pointer-events: none;
  }

  /* Rapha content padding: 32px 16px mobile */
  .hero-editorial__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 32px 16px;
    z-index: 10;
  }

  /* Rapha desktop: 40px 32px */
  @media (min-width: 768px) {
    .hero-editorial__content {
      padding: 40px 32px;
    }
  }

  /* Overline - Rapha style */
  .hero-editorial__overline {
    display: block;
    font-family: 'DM Sans', sans-serif;
    font-size: 12px; /* Rapha body small */
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3px; /* Rapha exact */
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 16px; /* Rapha spacing */
  }

  /* Heading - Qor Labs uses Instrument Serif (design decision) */
  .hero-editorial__heading {
    font-family: 'Instrument Serif', Georgia, serif;
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 400;
    line-height: 1.1;
    color: #FFFFFF;
    margin: 0 0 16px; /* Rapha spacing */
  }

  /* Subheading - Rapha serif text style */
  .hero-editorial__subheading {
    font-family: 'DM Sans', sans-serif;
    font-size: 12px; /* Rapha: 12px body */
    font-weight: 400;
    line-height: 21px; /* Rapha: 21px line-height */
    color: rgba(255, 255, 255, 0.85);
    margin: 0 0 24px; /* Rapha spacing */
    max-width: 400px;
  }

  /* Rapha buttons: gap 16px */
  .hero-editorial__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }

  /* Button - Rapha exact values */
  .hero-editorial__btn {
    box-sizing: border-box;
    display: inline-flex;
    align-items: center;
    justify-content: center;

    /* Rapha typography */
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;
    font-weight: 600;
    line-height: 14px;
    letter-spacing: 0.3px;
    text-transform: uppercase;
    text-decoration: none;
    text-align: center;
    white-space: normal;

    /* Rapha sizing */
    padding: 8px 20px;
    min-height: 44px;
    min-width: 120px;

    /* Rapha colors - inverted for hero (white bg) */
    background-color: #FFFFFF;
    color: #000000;
    border: 1px solid #FFFFFF;
    border-radius: 0;
    cursor: pointer;

    /* Rapha transition */
    transition: background-color 250ms ease-in-out,
                border-color 250ms ease-in-out,
                color 250ms ease-in-out;
  }

  /* Rapha hover - accent color */
  .hero-editorial__btn:hover {
    background-color: var(--color-accent, #2D5A3D);
    border-color: var(--color-accent, #2D5A3D);
    color: #FFFFFF;
  }
</style>

{% schema %}
{
  "name": "Editorial Hero",
  "tag": "section",
  "class": "section-hero-editorial",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image",
      "info": "Recommended: 1920x1080px or larger"
    },
    {
      "type": "range",
      "id": "hero_height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Hero height",
      "default": 85
    },
    {
      "type": "text",
      "id": "overline",
      "label": "Overline",
      "default": "Laboratory Essentials"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Precision Lab Equipment"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Reliable instruments for clinical and research workflows."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Editorial Hero"
    }
  ]
}
{% endschema %}
