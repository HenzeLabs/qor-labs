{%- comment -%}
  SECTION: Editorial Hero
  Full-bleed hero with text OVERLAID on image (bottom-left).
  Dark gradient overlay for text legibility.
{%- endcomment -%}

{%- liquid
  assign hero_height = section.settings.hero_height | default: 85
-%}

<section
  id="Hero-{{ section.id }}"
  class="hero-editorial"
  style="--hero-height: {{ hero_height }}vh;"
>
  {%- comment -%} Background Image {%- endcomment -%}
  <div class="hero-editorial__media">
    {%- if section.settings.image != blank -%}
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        srcset="
          {{ section.settings.image | image_url: width: 750 }} 750w,
          {{ section.settings.image | image_url: width: 1200 }} 1200w,
          {{ section.settings.image | image_url: width: 1920 }} 1920w,
          {{ section.settings.image | image_url: width: 2560 }} 2560w
        "
        sizes="100vw"
        alt="{{ section.settings.image.alt | default: section.settings.heading | escape }}"
        loading="eager"
        fetchpriority="high"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
        class="hero-editorial__image"
      >
    {%- else -%}
      <div class="hero-editorial__placeholder"></div>
    {%- endif -%}
  </div>

  {%- comment -%} Dark Gradient Overlay {%- endcomment -%}
  <div class="hero-editorial__overlay"></div>

  {%- comment -%} Text Content - Positioned Bottom Left {%- endcomment -%}
  <div class="hero-editorial__content">
    {%- if section.settings.overline != blank -%}
      <span class="hero-editorial__overline">
        {{ section.settings.overline }}
      </span>
    {%- endif -%}

    {%- if section.settings.heading != blank -%}
      <h1 class="hero-editorial__heading">
        {{ section.settings.heading }}
      </h1>
    {%- endif -%}

    {%- if section.settings.subheading != blank -%}
      <p class="hero-editorial__subheading">
        {{ section.settings.subheading }}
      </p>
    {%- endif -%}

    {%- if section.settings.button_label != blank -%}
      <div class="hero-editorial__buttons">
        <a
          href="{{ section.settings.button_link | default: '#' }}"
          class="hero-editorial__btn"
        >
          {{ section.settings.button_label }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .hero-editorial {
    position: relative;
    width: 100vw;
    min-height: var(--hero-height, 85vh);
    overflow: hidden;
  }

  .hero-editorial__media {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .hero-editorial__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-editorial__placeholder {
    width: 100%;
    height: 100%;
    background-color: #E8E6E1;
  }

  /* Dark gradient overlay at bottom for text legibility */
  .hero-editorial__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.6) 0%,
      rgba(0, 0, 0, 0.2) 40%,
      transparent 70%
    );
    pointer-events: none;
  }

  /* Text content - positioned bottom-left */
  .hero-editorial__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 2rem;
    z-index: 10;
  }

  @media (min-width: 1024px) {
    .hero-editorial__content {
      padding: 4rem;
    }
  }

  .hero-editorial__overline {
    display: block;
    font-family: 'DM Sans', sans-serif;
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 0.75rem;
  }

  .hero-editorial__heading {
    font-family: 'Instrument Serif', Georgia, serif;
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 400;
    line-height: 1.1;
    color: #FFFFFF;
    margin: 0 0 1rem;
  }

  .hero-editorial__subheading {
    font-family: 'DM Sans', sans-serif;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.8);
    margin: 0 0 1.5rem;
    max-width: 400px;
  }

  .hero-editorial__buttons {
    display: flex;
    gap: 1rem;
  }

  .hero-editorial__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: 'DM Sans', sans-serif;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: none;
    padding: 14px 28px;
    background-color: #FFFFFF;
    color: #0A0A0A;
    border: none;
    transition: opacity 0.2s ease;
  }

  .hero-editorial__btn:hover {
    opacity: 0.9;
  }
</style>

{% schema %}
{
  "name": "Editorial Hero",
  "tag": "section",
  "class": "section-hero-editorial",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image",
      "info": "Recommended: 1920x1080px or larger"
    },
    {
      "type": "range",
      "id": "hero_height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Hero height",
      "default": 85
    },
    {
      "type": "text",
      "id": "overline",
      "label": "Overline",
      "default": "Laboratory Essentials"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Precision Lab Equipment"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Reliable instruments for clinical and research workflows."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Editorial Hero"
    }
  ]
}
{% endschema %}
