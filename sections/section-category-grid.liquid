{%- comment -%}
  SECTION: Category Grid
  RAPHA-EXACT values from RAPHA-SOURCE-ANALYSIS.md
  Grid with image overlays. 16:9 aspect ratio with dark gradient and white text.
{%- endcomment -%}

<section id="CategoryGrid-{{ section.id }}" class="category-grid">
  <div class="category-grid__container">
    {%- if section.settings.heading != blank or section.settings.overline != blank -%}
      <div class="category-grid__header">
        {%- if section.settings.overline != blank -%}
          <span class="category-grid__overline">{{ section.settings.overline }}</span>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h2 class="category-grid__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="category-grid__grid category-grid__grid--{{ section.settings.columns }}">
      {%- for block in section.blocks -%}
        {%- liquid
          assign collection = block.settings.collection
          assign custom_image = block.settings.image
          assign custom_title = block.settings.title

          if custom_image != blank
            assign image = custom_image
          elsif collection.image != blank
            assign image = collection.image
          elsif collection.products.first.featured_image != blank
            assign image = collection.products.first.featured_image
          endif

          if custom_title != blank
            assign title = custom_title
          elsif collection != blank
            assign title = collection.title
          else
            assign title = 'Category'
          endif

          if collection != blank
            assign url = collection.url
          elsif block.settings.link != blank
            assign url = block.settings.link
          else
            assign url = '#'
          endif
        -%}

        <a
          href="{{ url }}"
          class="category-grid__card"
          {{ block.shopify_attributes }}
        >
          <div class="category-grid__image-wrapper">
            {%- if image != blank -%}
              <img
                src="{{ image | image_url: width: 800 }}"
                srcset="
                  {{ image | image_url: width: 400 }} 400w,
                  {{ image | image_url: width: 600 }} 600w,
                  {{ image | image_url: width: 800 }} 800w,
                  {{ image | image_url: width: 1000 }} 1000w
                "
                sizes="(max-width: 767px) 100vw, (max-width: 1023px) 50vw, 33vw"
                alt="{{ image.alt | default: title | escape }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
                class="category-grid__image"
              >
            {%- else -%}
              <div class="category-grid__placeholder">
                <span class="category-grid__placeholder-text">{{ title }}</span>
              </div>
            {%- endif -%}
            <div class="category-grid__overlay"></div>
          </div>
          <div class="category-grid__content">
            <h3 class="category-grid__title">{{ title }}</h3>
            {%- if block.settings.subtitle != blank -%}
              <span class="category-grid__subtitle">{{ block.settings.subtitle }}</span>
            {%- endif -%}
          </div>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  /* =====================================
     CATEGORY GRID - RAPHA EXACT VALUES
     Source: RAPHA-SOURCE-ANALYSIS.md
     ===================================== */

  .category-grid {
    background-color: #FFFFFF;
    padding: 32px 0;                          /* RAPHA EXACT */
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);  /* RAPHA EXACT */
  }

  .category-grid__container {
    max-width: none;
    margin: 0 auto;
    padding: 0 16px;                          /* RAPHA mobile */
  }

  @media (min-width: 768px) {
    .category-grid__container {
      padding: 0 32px;                        /* RAPHA desktop */
    }
  }

  /* RAPHA: section header margin-bottom 24px/32px */
  .category-grid__header {
    text-align: center;
    margin-bottom: 24px;                      /* RAPHA mobile */
  }

  @media (min-width: 992px) {
    .category-grid__header {
      margin-bottom: 32px;                    /* RAPHA desktop */
    }
  }

  /* Overline - matches trust item title style */
  .category-grid__overline {
    display: block;
    font-family: 'DM Sans', sans-serif;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3px;
    color: #6B6B6B;
    margin-bottom: 8px;
  }

  /* RAPHA EXACT: H2 24px/32px, 600, uppercase */
  .category-grid__heading {
    font-family: 'DM Sans', sans-serif;
    font-size: 24px;                          /* RAPHA mobile */
    font-weight: 600;                         /* RAPHA EXACT */
    letter-spacing: 0.3px;                    /* RAPHA EXACT */
    text-transform: uppercase;
    line-height: 24px;
    color: #000000;
    margin: 0;
  }

  @media (min-width: 992px) {
    .category-grid__heading {
      font-size: 32px;                        /* RAPHA desktop */
      line-height: 32px;                      /* RAPHA EXACT */
    }
  }

  /* RAPHA EXACT: gap 16px mobile, 32px desktop */
  .category-grid__grid {
    display: grid;
    gap: 16px;                                /* RAPHA mobile */
  }

  @media (min-width: 768px) {
    .category-grid__grid {
      gap: 32px;                              /* RAPHA desktop */
    }
  }

  .category-grid__grid--2 {
    grid-template-columns: 1fr;
  }

  .category-grid__grid--3 {
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .category-grid__grid--2 {
      grid-template-columns: repeat(2, 1fr);
    }

    .category-grid__grid--3 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 992px) {
    .category-grid__grid--3 {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .category-grid__card {
    position: relative;
    display: block;
    text-decoration: none;
    overflow: hidden;
  }

  /* RAPHA: 16:9 aspect ratio, #F5F5F5 bg */
  .category-grid__image-wrapper {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: #F5F5F5;                /* RAPHA EXACT */
  }

  /* RAPHA EXACT: filter transition 0.5s ease-out */
  .category-grid__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: filter 0.5s ease-out;         /* RAPHA EXACT */
    transform: translate3d(0, 0, 0);
    backface-visibility: hidden;
  }

  /* RAPHA EXACT: hover brightness(0.95) */
  .category-grid__card:hover .category-grid__image {
    filter: brightness(0.95);                 /* RAPHA EXACT */
  }

  /* Clean placeholder */
  .category-grid__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #F5F5F5;                /* RAPHA EXACT */
  }

  .category-grid__placeholder-text {
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.3px;
    color: #949494;
    text-align: center;
    padding: 16px;
  }

  /* RAPHA EXACT: gradient overlay 0.3 max, to top */
  .category-grid__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.3) 0%,
      transparent 50%
    );
    pointer-events: none;
    transition: background 250ms ease-in-out;
  }

  .category-grid__card:hover .category-grid__overlay {
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.4) 0%,
      transparent 60%
    );
  }

  /* RAPHA: content padding 24px/32px */
  .category-grid__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 24px;                            /* RAPHA mobile */
    text-align: center;
  }

  @media (min-width: 992px) {
    .category-grid__content {
      padding: 32px;                          /* RAPHA desktop */
    }
  }

  /* RAPHA EXACT: 14px/600/uppercase/0.3px */
  .category-grid__title {
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;                          /* RAPHA EXACT */
    font-weight: 600;                         /* RAPHA EXACT */
    line-height: 14px;
    text-transform: uppercase;
    letter-spacing: 0.3px;                    /* RAPHA EXACT */
    color: #FFFFFF;
    margin: 0;
  }

  /* Small body text */
  .category-grid__subtitle {
    display: block;
    font-family: 'DM Sans', sans-serif;
    font-size: 12px;
    font-weight: 400;
    line-height: 21px;                        /* RAPHA EXACT */
    color: rgba(255, 255, 255, 0.85);
    margin-top: 8px;
  }
</style>

{% schema %}
{
  "name": "Category Grid",
  "tag": "section",
  "class": "section-category-grid",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "overline",
      "label": "Overline"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Category"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns (desktop)",
      "options": [
        { "value": "2", "label": "2 columns" },
        { "value": "3", "label": "3 columns" }
      ],
      "default": "3"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom image",
          "info": "Overrides the collection image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Custom title",
          "info": "Overrides the collection title"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "info": "Optional small text below title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Custom link",
          "info": "Overrides the collection link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Grid",
      "blocks": [
        { "type": "category" },
        { "type": "category" },
        { "type": "category" }
      ]
    }
  ]
}
{% endschema %}
