{%- comment -%}
  SECTION: Newsletter
  RAPHA-EXACT values from RAPHA-SOURCE-ANALYSIS.md
  Clean email signup with light or dark background options.
{%- endcomment -%}

{%- liquid
  assign bg_style = section.settings.background_style
-%}

<section
  id="Newsletter-{{ section.id }}"
  class="newsletter newsletter--{{ bg_style }}"
>
  <div class="newsletter__container">
    <div class="newsletter__content">
      {%- if section.settings.overline != blank -%}
        <span class="newsletter__overline">{{ section.settings.overline }}</span>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h2 class="newsletter__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <p class="newsletter__description">{{ section.settings.description }}</p>
      {%- endif -%}

      {%- form 'customer', class: 'newsletter__form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter__form-row">
          <div class="newsletter__input-wrapper">
            <input
              type="email"
              name="contact[email]"
              id="NewsletterEmail-{{ section.id }}"
              class="newsletter__input"
              placeholder="{{ section.settings.placeholder | default: 'Enter your email' }}"
              required
              autocomplete="email"
              aria-label="{{ section.settings.placeholder | default: 'Enter your email' }}"
            >
          </div>
          <button type="submit" class="newsletter__btn">
            {{ section.settings.button_label | default: 'Subscribe' }}
          </button>
        </div>
        {%- if form.posted_successfully? -%}
          <p class="newsletter__success">{{ section.settings.success_message | default: 'Thank you for subscribing.' }}</p>
        {%- endif -%}
        {%- if form.errors -%}
          <p class="newsletter__error">{{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}</p>
        {%- endif -%}
      {%- endform -%}

      {%- if section.settings.disclaimer != blank -%}
        <p class="newsletter__disclaimer">{{ section.settings.disclaimer }}</p>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
  /* =====================================
     NEWSLETTER - RAPHA EXACT VALUES
     Source: RAPHA-SOURCE-ANALYSIS.md
     ===================================== */

  .newsletter {
    width: 100%;
    padding: 32px 0;                          /* RAPHA EXACT */
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);  /* RAPHA EXACT */
  }

  .newsletter--light {
    background-color: #F5F5F5;                /* RAPHA EXACT */
  }

  .newsletter--dark {
    background-color: #0A0A0A;
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }

  .newsletter__container {
    max-width: none;
    margin: 0 auto;
    padding: 0 16px;                          /* RAPHA mobile */
  }

  @media (min-width: 768px) {
    .newsletter__container {
      padding: 0 32px;                        /* RAPHA desktop */
    }
  }

  .newsletter__content {
    max-width: 560px;
    margin: 0 auto;
    text-align: center;
  }

  /* Overline - 14px/600/0.3px uppercase */
  .newsletter__overline {
    display: block;
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;                          /* RAPHA EXACT */
    font-weight: 600;                         /* RAPHA EXACT */
    text-transform: uppercase;
    letter-spacing: 0.3px;                    /* RAPHA EXACT */
    margin-bottom: 16px;
  }

  .newsletter--light .newsletter__overline {
    color: #6B6B6B;
  }

  .newsletter--dark .newsletter__overline {
    color: rgba(255, 255, 255, 0.6);
  }

  /* RAPHA EXACT: H2 24px/32px, 600, uppercase */
  .newsletter__heading {
    font-family: 'DM Sans', sans-serif;
    font-size: 24px;                          /* RAPHA mobile */
    font-weight: 600;                         /* RAPHA EXACT */
    line-height: 24px;
    letter-spacing: 0.3px;                    /* RAPHA EXACT */
    text-transform: uppercase;
    margin: 0 0 16px;
  }

  @media (min-width: 992px) {
    .newsletter__heading {
      font-size: 32px;                        /* RAPHA desktop */
      line-height: 32px;                      /* RAPHA EXACT */
    }
  }

  .newsletter--light .newsletter__heading {
    color: #000000;
  }

  .newsletter--dark .newsletter__heading {
    color: #FFFFFF;
  }

  /* RAPHA EXACT: body 16px/400/28px */
  .newsletter__description {
    font-family: 'DM Sans', sans-serif;
    font-size: 16px;                          /* RAPHA EXACT */
    font-weight: 400;                         /* RAPHA EXACT */
    line-height: 28px;                        /* RAPHA EXACT */
    margin: 0 0 24px;
  }

  .newsletter--light .newsletter__description {
    color: #6B6B6B;
  }

  .newsletter--dark .newsletter__description {
    color: rgba(255, 255, 255, 0.7);
  }

  .newsletter__form {
    width: 100%;
  }

  .newsletter__form-row {
    display: flex;
    flex-direction: column;
    gap: 8px;                                 /* RAPHA mobile gap */
  }

  @media (min-width: 768px) {
    .newsletter__form-row {
      flex-direction: row;
      gap: 0;
    }
  }

  .newsletter__input-wrapper {
    flex: 1;
  }

  /* Input - RAPHA style: 40px min-height, 16px font */
  .newsletter__input {
    width: 100%;
    box-sizing: border-box;
    font-family: 'DM Sans', sans-serif;
    font-size: 16px;                          /* RAPHA EXACT */
    font-weight: 400;
    padding: 12px 16px;
    min-height: 40px;                         /* RAPHA EXACT */
    border: 1px solid;
    border-radius: 0;                         /* RAPHA EXACT */
    background-color: transparent;
    transition: border-color 250ms ease-in-out;
  }

  .newsletter--light .newsletter__input {
    border-color: rgba(0, 0, 0, 0.2);
    color: #000000;
  }

  .newsletter--light .newsletter__input::placeholder {
    color: #949494;
  }

  .newsletter--light .newsletter__input:focus {
    outline: none;
    border-color: #000000;
  }

  .newsletter--dark .newsletter__input {
    border-color: rgba(255, 255, 255, 0.3);
    color: #FFFFFF;
  }

  .newsletter--dark .newsletter__input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .newsletter--dark .newsletter__input:focus {
    outline: none;
    border-color: #FFFFFF;
  }

  @media (min-width: 768px) {
    .newsletter__input {
      border-right: none;
    }

    .newsletter__input:focus {
      border-right: none;
    }
  }

  /* RAPHA EXACT: button 14px/600, 12px padding, 40px min-height */
  .newsletter__btn {
    box-sizing: border-box;
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;                          /* RAPHA EXACT */
    font-weight: 600;                         /* RAPHA EXACT */
    line-height: 14px;
    letter-spacing: normal;                   /* RAPHA EXACT */
    text-transform: uppercase;
    padding: 12px 24px;                       /* RAPHA EXACT */
    min-height: 40px;                         /* RAPHA EXACT */
    border: none;
    border-radius: 0;                         /* RAPHA EXACT */
    cursor: pointer;
    transition: background-color 250ms ease-in-out;
    white-space: nowrap;
  }

  .newsletter--light .newsletter__btn {
    background-color: #000000;
    color: #FFFFFF;
  }

  .newsletter--light .newsletter__btn:hover {
    background-color: #2D5A3D;                /* Qor green */
  }

  .newsletter--dark .newsletter__btn {
    background-color: #FFFFFF;
    color: #000000;
  }

  .newsletter--dark .newsletter__btn:hover {
    background-color: #2D5A3D;
    color: #FFFFFF;
  }

  /* Feedback messages */
  .newsletter__success {
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: #2D5A3D;                           /* Qor green */
    margin-top: 16px;
  }

  .newsletter--dark .newsletter__success {
    color: #7DD87D;
  }

  .newsletter__error {
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: #C23B22;
    margin-top: 16px;
  }

  /* Disclaimer - 12px/21px */
  .newsletter__disclaimer {
    font-family: 'DM Sans', sans-serif;
    font-size: 12px;                          /* RAPHA EXACT */
    font-weight: 400;
    line-height: 21px;                        /* RAPHA EXACT */
    margin-top: 24px;
  }

  .newsletter--light .newsletter__disclaimer {
    color: #949494;
  }

  .newsletter--dark .newsletter__disclaimer {
    color: rgba(255, 255, 255, 0.5);
  }
</style>

