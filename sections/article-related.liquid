{{ 'component-card.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .article-related-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .article-related-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .article-related-{{ section.id }} .article-related__grid {
    display: grid;
    gap: 2rem;
  }
  @media screen and (min-width: 750px) {
    .article-related-{{ section.id }} .article-related__grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
  .article-related-{{ section.id }} .article-related__list {
    display: grid;
    gap: 1rem;
  }
{%- endstyle -%}

<section class="article-related-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    <div class="article-related__grid">
      <div>
        <h2 class="{{ section.settings.heading_size }}">{{ section.settings.products_heading }}</h2>
        <div class="article-related__list">
          {%- for block in section.blocks -%}
            {%- if block.type == 'product' and block.settings.product != blank -%}
              <div {{ block.shopify_attributes }}>
                {% render 'card-product', card_product: block.settings.product, show_vendor: false, show_rating: false %}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
      <div>
        <h2 class="{{ section.settings.heading_size }}">{{ section.settings.guides_heading }}</h2>
        <div class="article-related__list">
          {%- for block in section.blocks -%}
            {%- if block.type == 'article' and block.settings.article != blank -%}
              <div {{ block.shopify_attributes }}>
                {% render 'article-card', article: block.settings.article, show_date: true, show_author: false, show_excerpt: true %}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Article related links",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "products_heading",
      "label": "Products heading",
      "default": "Related products"
    },
    {
      "type": "text",
      "id": "guides_heading",
      "label": "Guides heading",
      "default": "Related guides"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "default": "h3",
      "options": [
        { "value": "h2", "label": "Medium" },
        { "value": "h3", "label": "Small" }
      ]
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    },
    {
      "type": "article",
      "name": "Article",
      "settings": [
        {
          "type": "article",
          "id": "article",
          "label": "Article"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Article related links",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "article" },
        { "type": "article" }
      ]
    }
  ]
}
{% endschema %}
