{% comment %}
  Trust Bar Section — Rapha-inspired design
  Displays 4 trust indicators: shipping, warranty, delivery, support
  Mobile: vertical stack | Tablet: 2x2 grid | Desktop: 4-column grid
{% endcomment %}

<section
  class="bg-surface border-t border-b border-[#E0DED9] py-8 md:py-12 lg:py-16"
  aria-label="{{ section.settings.heading | default: 'Why shop with us' }}"
>
  <div class="max-w-7xl mx-auto px-4 md:px-8">
    {%- if section.settings.heading != blank -%}
      <h2 class="sr-only">{{ section.settings.heading }}</h2>
    {%- endif -%}

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      {%- for block in section.blocks -%}
        <div
          class="flex flex-col items-center text-center group"
          {{ block.shopify_attributes }}
        >
          {%- comment -%} Icon container {%- endcomment -%}
          <div class="w-10 h-10 mb-4 text-[#1A1A1A] flex items-center justify-center">
            {%- case block.settings.icon -%}
              {%- when 'shipping' -%}
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                </svg>
              {%- when 'warranty' -%}
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
              {%- when 'clock' -%}
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              {%- when 'support' -%}
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
              {%- when 'check' -%}
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              {%- when 'star' -%}
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                </svg>
              {%- else -%}
                {%- comment -%} Default: shipping icon {%- endcomment -%}
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                </svg>
            {%- endcase -%}
          </div>

          {%- comment -%} Title — uppercase tracked label {%- endcomment -%}
          {%- if block.settings.title != blank -%}
            <h3 class="text-[11px] uppercase tracking-[0.15em] font-medium text-[#1A1A1A] mb-1">
              {{ block.settings.title }}
            </h3>
          {%- endif -%}

          {%- comment -%} Description {%- endcomment -%}
          {%- if block.settings.description != blank -%}
            <p class="text-[13px] text-[#6B6B6B] leading-relaxed max-w-[200px]">
              {{ block.settings.description }}
            </p>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Trust Bar",
  "tag": "section",
  "class": "trust-bar-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading (Screen Reader)",
      "default": "Why Qor Labs",
      "info": "Hidden visually, used for accessibility"
    }
  ],
  "blocks": [
    {
      "type": "trust_item",
      "name": "Trust Item",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "default": "shipping",
          "options": [
            { "value": "shipping", "label": "Shipping Box" },
            { "value": "warranty", "label": "Shield (Warranty)" },
            { "value": "clock", "label": "Clock (Fast)" },
            { "value": "support", "label": "Support" },
            { "value": "check", "label": "Checkmark" },
            { "value": "star", "label": "Star" }
          ]
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Free Shipping"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "On orders over $99"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Bar",
      "blocks": [
        {
          "type": "trust_item",
          "settings": {
            "icon": "shipping",
            "title": "Free Shipping",
            "description": "On orders over $99"
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "warranty",
            "title": "2-Year Warranty",
            "description": "Full manufacturer coverage"
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "clock",
            "title": "Ships in 24hrs",
            "description": "Most orders same-day"
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "support",
            "title": "Expert Support",
            "description": "Lab specialists available"
          }
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
