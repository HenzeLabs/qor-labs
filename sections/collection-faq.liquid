{{ 'component-accordion.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .collection-faq-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .collection-faq-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="collection-faq-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width page-width--narrow">
    {%- if section.settings.heading != blank -%}
      <h2 class="{{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
    {%- endif -%}
    <div class="accordion">
      {%- for block in section.blocks -%}
        <div class="accordion__item" {{ block.shopify_attributes }}>
          <details>
            <summary>
              <div class="summary__title">
                <h3 class="h4 accordion__title">{{ block.settings.question }}</h3>
              </div>
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </summary>
            <div class="accordion__content rte">
              {{ block.settings.answer }}
            </div>
          </details>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection FAQ",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Collection FAQs"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "default": "h2",
      "options": [
        { "value": "h2", "label": "Medium" },
        { "value": "h3", "label": "Small" }
      ]
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What should I consider before choosing a model?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Focus on sample volume, tube size, and your daily throughput to pick the right capacity.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection FAQ",
      "blocks": [
        { "type": "faq" },
        { "type": "faq" },
        { "type": "faq" }
      ]
    }
  ]
}
{% endschema %}
