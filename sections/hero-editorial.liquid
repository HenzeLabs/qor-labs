{%- comment -%}
  Hero Editorial Section
  Rapha-inspired full-bleed hero with text overlay
  - Full-bleed image (70-85vh height)
  - Bottom-left positioned text overlay
  - Dark gradient overlay for text legibility
  - Single CTA button
{%- endcomment -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
-%}

<section
  id="HeroEditorial-{{ section.id }}"
  class="hero-editorial relative w-full overflow-hidden"
  style="min-height: {{ section.settings.height_mobile }}vh;"
>
  {%- comment -%} Background Image {%- endcomment -%}
  <div class="absolute inset-0 w-full h-full">
    {%- if section.settings.image != blank -%}
      {%- liquid
        assign image = section.settings.image
        assign image_height = image.width | divided_by: image.aspect_ratio
      -%}
      <img
        srcset="
          {%- if image.width >= 375 -%}{{ image | image_url: width: 375 }} 375w,{%- endif -%}
          {%- if image.width >= 750 -%}{{ image | image_url: width: 750 }} 750w,{%- endif -%}
          {%- if image.width >= 1100 -%}{{ image | image_url: width: 1100 }} 1100w,{%- endif -%}
          {%- if image.width >= 1500 -%}{{ image | image_url: width: 1500 }} 1500w,{%- endif -%}
          {%- if image.width >= 1920 -%}{{ image | image_url: width: 1920 }} 1920w,{%- endif -%}
          {%- if image.width >= 2560 -%}{{ image | image_url: width: 2560 }} 2560w,{%- endif -%}
          {{ image | image_url }} {{ image.width }}w
        "
        src="{{ image | image_url: width: 1920 }}"
        sizes="100vw"
        alt="{{ image.alt | escape | default: section.settings.heading }}"
        width="{{ image.width }}"
        height="{{ image_height }}"
        loading="{% if section.index == 1 %}eager{% else %}lazy{% endif %}"
        fetchpriority="{{ fetch_priority }}"
        class="w-full h-full object-cover object-{{ section.settings.image_position }}"
      >
    {%- else -%}
      <div class="w-full h-full bg-[#1A1A1A] flex items-center justify-center">
        {{ 'lifestyle-2' | placeholder_svg_tag: 'w-full h-full text-[#333]' }}
      </div>
    {%- endif -%}
  </div>

  {%- comment -%} Gradient Overlay {%- endcomment -%}
  <div
    class="absolute inset-0 pointer-events-none"
    style="background: linear-gradient(to top, rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }}) 0%, rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 | times: 0.5 }}) 40%, transparent 70%);"
  ></div>

  {%- comment -%} Content {%- endcomment -%}
  <div class="relative z-10 flex items-end w-full h-full min-h-[inherit]">
    <div class="container w-full px-4 sm:px-6 lg:px-8 pb-12 md:pb-16 lg:pb-24">
      <div class="max-w-xl">
        {%- if section.settings.overline != blank -%}
          <p class="overline text-white/80 mb-3 md:mb-4">
            {{ section.settings.overline }}
          </p>
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <h1 class="font-display text-white text-[40px] sm:text-[52px] md:text-[64px] lg:text-[72px] leading-[1.1] font-normal mb-4 md:mb-6">
            {{ section.settings.heading }}
          </h1>
        {%- endif -%}

        {%- if section.settings.subheading != blank -%}
          <p class="font-body text-white/90 text-base md:text-lg leading-relaxed mb-6 md:mb-8 max-w-md">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
          <a
            href="{{ section.settings.button_link }}"
            class="btn btn-primary inline-flex items-center justify-center bg-white text-[#0A0A0A] uppercase tracking-[0.15em] text-[13px] font-medium px-8 py-4 hover:bg-white/90 transition-colors duration-300"
          >
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  #HeroEditorial-{{ section.id }} {
    min-height: {{ section.settings.height_mobile }}vh;
  }

  @media (min-width: 768px) {
    #HeroEditorial-{{ section.id }} {
      min-height: {{ section.settings.height_desktop }}vh;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Editorial",
  "tag": "section",
  "class": "hero-editorial-section",
  "limit": 1,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image",
      "info": "Recommended: 1920x1080px or larger. High-quality editorial photography."
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image Position",
      "options": [
        { "value": "top", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "bottom", "label": "Bottom" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "height_mobile",
      "label": "Height (Mobile)",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "default": 70
    },
    {
      "type": "range",
      "id": "height_desktop",
      "label": "Height (Desktop)",
      "min": 60,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "default": 85
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "info": "Darkness of the gradient overlay for text legibility",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 60
    },
    {
      "type": "header",
      "content": "Text Content"
    },
    {
      "type": "text",
      "id": "overline",
      "label": "Overline Text",
      "default": "New Collection",
      "info": "Small uppercase text above the headline (e.g., collection name)"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Headline",
      "default": "Precision Lab Equipment"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Professional-grade instruments for modern laboratories.",
      "info": "Optional supporting text below the headline"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Editorial"
    }
  ]
}
{% endschema %}
