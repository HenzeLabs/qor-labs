{%- comment -%}
  SECTION: Featured Collections
  Rapha-inspired editorial collection grid.
  2:3 aspect ratio images, uppercase tracked titles, subtle hover effects.
{%- endcomment -%}

<section id="FeaturedCollections-{{ section.id }}" class="featured-collections section-padding">
  <div class="featured-collections__container">
    {%- if section.settings.heading != blank or section.settings.overline != blank -%}
      <div class="featured-collections__header">
        {%- if section.settings.overline != blank -%}
          <span class="featured-collections__overline">{{ section.settings.overline }}</span>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h2 class="featured-collections__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="featured-collections__grid featured-collections__grid--{{ section.settings.columns }}">
      {%- for block in section.blocks -%}
        {%- liquid
          assign collection = block.settings.collection
          assign custom_image = block.settings.custom_image
          assign custom_title = block.settings.custom_title

          if custom_image != blank
            assign image = custom_image
          elsif collection.image != blank
            assign image = collection.image
          elsif collection.products.first.featured_image != blank
            assign image = collection.products.first.featured_image
          endif

          if custom_title != blank
            assign title = custom_title
          elsif collection != blank
            assign title = collection.title
          else
            assign title = 'Collection'
          endif

          if collection != blank
            assign url = collection.url
          else
            assign url = '#'
          endif
        -%}

        <a
          href="{{ url }}"
          class="featured-collections__card"
          {{ block.shopify_attributes }}
        >
          <div class="featured-collections__image-wrapper">
            {%- if image != blank -%}
              <img
                src="{{ image | image_url: width: 800 }}"
                srcset="
                  {{ image | image_url: width: 400 }} 400w,
                  {{ image | image_url: width: 600 }} 600w,
                  {{ image | image_url: width: 800 }} 800w,
                  {{ image | image_url: width: 1000 }} 1000w
                "
                sizes="(max-width: 767px) 100vw, (max-width: 1023px) 50vw, 33vw"
                alt="{{ image.alt | default: title | escape }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
                class="featured-collections__image"
              >
            {%- else -%}
              <div class="featured-collections__placeholder">
                <span class="featured-collections__placeholder-text">{{ title }}</span>
              </div>
            {%- endif -%}
          </div>
          <div class="featured-collections__info">
            <h3 class="featured-collections__title">{{ title }}</h3>
            {%- if block.settings.show_product_count and collection != blank -%}
              <span class="featured-collections__count">{{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}</span>
            {%- endif -%}
          </div>
        </a>
      {%- endfor -%}
    </div>

    {%- if section.settings.show_view_all and section.settings.view_all_link != blank -%}
      <div class="featured-collections__footer">
        <a href="{{ section.settings.view_all_link }}" class="featured-collections__view-all">
          {{ section.settings.view_all_label | default: 'View All Collections' }}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .featured-collections {
    background-color: var(--color-white, #FFFFFF);
  }

  .featured-collections__container {
    max-width: var(--container-max, 80rem);
    margin: 0 auto;
    padding: 0 var(--space-md, 1rem);
  }

  .featured-collections__header {
    text-align: center;
    margin-bottom: var(--space-2xl, 3rem);
  }

  .featured-collections__overline {
    display: block;
    font-family: var(--font-body, 'DM Sans', sans-serif);
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-secondary, #6B6B6B);
    margin-bottom: var(--space-sm, 0.5rem);
  }

  .featured-collections__heading {
    font-family: var(--font-display, 'Instrument Serif', serif);
    font-size: clamp(1.75rem, 4vw, 2.25rem);
    font-weight: 400;
    color: var(--color-text-primary, #1A1A1A);
    margin: 0;
  }

  .featured-collections__grid {
    display: grid;
    gap: var(--space-md, 1rem);
  }

  .featured-collections__grid--2 {
    grid-template-columns: 1fr;
  }

  .featured-collections__grid--3 {
    grid-template-columns: 1fr;
  }

  .featured-collections__card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .featured-collections__image-wrapper {
    position: relative;
    aspect-ratio: 2 / 3;
    overflow: hidden;
    background-color: var(--color-off-white, #F7F7F5);
  }

  .featured-collections__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease, opacity 0.4s ease;
  }

  .featured-collections__card:hover .featured-collections__image {
    transform: scale(1.02);
    opacity: 0.95;
  }

  .featured-collections__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #F3F4F6;
  }

  .featured-collections__placeholder-text {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #9CA3AF;
    text-align: center;
    padding: 1rem;
  }

  .featured-collections__info {
    padding-top: var(--space-md, 1rem);
    text-align: center;
  }

  .featured-collections__title {
    font-family: var(--font-body, 'DM Sans', sans-serif);
    font-size: 0.8125rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-text-primary, #1A1A1A);
    margin: 0;
  }

  .featured-collections__count {
    display: block;
    font-family: var(--font-body, 'DM Sans', sans-serif);
    font-size: 0.75rem;
    font-weight: 400;
    color: var(--color-text-tertiary, #9B9B9B);
    margin-top: var(--space-xs, 0.25rem);
  }

  .featured-collections__footer {
    text-align: center;
    margin-top: var(--space-2xl, 3rem);
  }

  .featured-collections__view-all {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm, 0.5rem);
    font-family: var(--font-body, 'DM Sans', sans-serif);
    font-size: 0.8125rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-primary, #1A1A1A);
    text-decoration: underline;
    text-underline-offset: 4px;
    transition: opacity 0.2s ease;
  }

  .featured-collections__view-all:hover {
    opacity: 0.7;
  }

  .featured-collections__view-all svg {
    transition: transform 0.2s ease;
  }

  .featured-collections__view-all:hover svg {
    transform: translateX(4px);
  }

  /* Tablet */
  @media (min-width: 768px) {
    .featured-collections__container {
      padding: 0 var(--space-lg, 1.5rem);
    }

    .featured-collections__grid--2 {
      grid-template-columns: repeat(2, 1fr);
    }

    .featured-collections__grid--3 {
      grid-template-columns: repeat(2, 1fr);
    }

    .featured-collections__grid {
      gap: var(--space-lg, 1.5rem);
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .featured-collections__container {
      padding: 0 var(--space-xl, 2rem);
    }

    .featured-collections__grid--3 {
      grid-template-columns: repeat(3, 1fr);
    }

    .featured-collections__grid {
      gap: var(--space-xl, 2rem);
    }
  }
</style>

{% schema %}
{
  "name": "Featured Collections",
  "tag": "section",
  "class": "section-featured-collections",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "overline",
      "label": "Overline",
      "default": "Shop by Category"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collections"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns (desktop)",
      "options": [
        { "value": "2", "label": "2 columns" },
        { "value": "3", "label": "3 columns" }
      ],
      "default": "3"
    },
    {
      "type": "header",
      "content": "View all link"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show view all link",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "Link label",
      "default": "View All Collections"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "Link URL"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "custom_image",
          "label": "Custom image",
          "info": "Overrides the collection image"
        },
        {
          "type": "text",
          "id": "custom_title",
          "label": "Custom title",
          "info": "Overrides the collection title"
        },
        {
          "type": "checkbox",
          "id": "show_product_count",
          "label": "Show product count",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collections",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
