{%- comment -%}
  SECTION: Featured Collections
  RAPHA-EXACT values from RAPHA-SOURCE-ANALYSIS.md
  Editorial collection grid with 2:3 aspect ratio images.
{%- endcomment -%}

<section id="FeaturedCollections-{{ section.id }}" class="featured-collections">
  <div class="featured-collections__container">
    {%- if section.settings.heading != blank or section.settings.overline != blank -%}
      <div class="featured-collections__header">
        {%- if section.settings.overline != blank -%}
          <span class="featured-collections__overline">{{ section.settings.overline }}</span>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h2 class="featured-collections__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="featured-collections__grid featured-collections__grid--{{ section.settings.columns }}">
      {%- for block in section.blocks -%}
        {%- liquid
          assign collection = block.settings.collection
          assign custom_image = block.settings.custom_image
          assign custom_title = block.settings.custom_title

          if custom_image != blank
            assign image = custom_image
          elsif collection.image != blank
            assign image = collection.image
          elsif collection.products.first.featured_image != blank
            assign image = collection.products.first.featured_image
          endif

          if custom_title != blank
            assign title = custom_title
          elsif collection != blank
            assign title = collection.title
          else
            assign title = 'Collection'
          endif

          if collection != blank
            assign url = collection.url
          else
            assign url = '#'
          endif
        -%}

        <a
          href="{{ url }}"
          class="featured-collections__card"
          {{ block.shopify_attributes }}
        >
          <div class="featured-collections__image-wrapper">
            {%- if image != blank -%}
              <img
                src="{{ image | image_url: width: 800 }}"
                srcset="
                  {{ image | image_url: width: 400 }} 400w,
                  {{ image | image_url: width: 600 }} 600w,
                  {{ image | image_url: width: 800 }} 800w,
                  {{ image | image_url: width: 1000 }} 1000w
                "
                sizes="(max-width: 767px) 100vw, (max-width: 1023px) 50vw, 33vw"
                alt="{{ image.alt | default: title | escape }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
                class="featured-collections__image"
              >
            {%- else -%}
              {%- comment -%} Clean placeholder - bg gray with centered text {%- endcomment -%}
              <div class="featured-collections__placeholder">
                <span class="featured-collections__placeholder-text">{{ title }}</span>
              </div>
            {%- endif -%}
          </div>
          <div class="featured-collections__info">
            <h3 class="featured-collections__title">{{ title }}</h3>
            {%- if block.settings.show_product_count and collection != blank -%}
              <span class="featured-collections__count">{{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}</span>
            {%- endif -%}
          </div>
        </a>
      {%- endfor -%}
    </div>

    {%- if section.settings.show_view_all and section.settings.view_all_link != blank -%}
      <div class="featured-collections__footer">
        <a href="{{ section.settings.view_all_link }}" class="featured-collections__view-all">
          {{ section.settings.view_all_label | default: 'View All Collections' }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  /* =====================================
     FEATURED COLLECTIONS - RAPHA EXACT VALUES
     Source: RAPHA-SOURCE-ANALYSIS.md
     ===================================== */

  .featured-collections {
    background-color: #FFFFFF;
    padding: 32px 0;                          /* RAPHA EXACT */
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);  /* RAPHA EXACT */
  }

  .featured-collections__container {
    max-width: none;
    margin: 0 auto;
    padding: 0 16px;                          /* RAPHA mobile */
  }

  @media (min-width: 768px) {
    .featured-collections__container {
      padding: 0 32px;                        /* RAPHA desktop */
    }
  }

  /* RAPHA: section header margin-bottom 24px/32px */
  .featured-collections__header {
    text-align: center;
    margin-bottom: 24px;                      /* RAPHA mobile */
  }

  @media (min-width: 992px) {
    .featured-collections__header {
      margin-bottom: 32px;                    /* RAPHA desktop */
    }
  }

  /* Overline - matches trust item title style */
  .featured-collections__overline {
    display: block;
    font-family: 'DM Sans', sans-serif;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3px;
    color: #6B6B6B;
    margin-bottom: 8px;
  }

  /* RAPHA EXACT: H2 24px/32px, 600, uppercase */
  .featured-collections__heading {
    font-family: 'DM Sans', sans-serif;
    font-size: 24px;                          /* RAPHA mobile */
    font-weight: 600;                         /* RAPHA EXACT */
    letter-spacing: 0.3px;                    /* RAPHA EXACT */
    text-transform: uppercase;
    line-height: 24px;
    color: #000000;
    margin: 0;
  }

  @media (min-width: 992px) {
    .featured-collections__heading {
      font-size: 32px;                        /* RAPHA desktop */
      line-height: 32px;                      /* RAPHA EXACT */
    }
  }

  /* RAPHA EXACT: gap 16px mobile, 32px desktop */
  .featured-collections__grid {
    display: grid;
    gap: 16px;                                /* RAPHA mobile */
  }

  @media (min-width: 768px) {
    .featured-collections__grid {
      gap: 32px;                              /* RAPHA desktop */
    }
  }

  .featured-collections__grid--2 {
    grid-template-columns: 1fr;
  }

  .featured-collections__grid--3 {
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .featured-collections__grid--2 {
      grid-template-columns: repeat(2, 1fr);
    }

    .featured-collections__grid--3 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 992px) {
    .featured-collections__grid--3 {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .featured-collections__card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  /* RAPHA: 2:3 aspect ratio, #F5F5F5 bg */
  .featured-collections__image-wrapper {
    position: relative;
    aspect-ratio: 2 / 3;
    overflow: hidden;
    background-color: #F5F5F5;                /* RAPHA EXACT */
  }

  /* RAPHA EXACT: filter transition 0.5s ease-out */
  .featured-collections__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: filter 0.5s ease-out;         /* RAPHA EXACT */
    transform: translate3d(0, 0, 0);
    backface-visibility: hidden;
  }

  /* RAPHA EXACT: hover brightness(0.95) */
  .featured-collections__card:hover .featured-collections__image {
    filter: brightness(0.95);                 /* RAPHA EXACT */
  }

  /* Clean placeholder */
  .featured-collections__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #F5F5F5;
  }

  .featured-collections__placeholder-text {
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.3px;
    color: #949494;
    text-align: center;
    padding: 16px;
  }

  /* RAPHA: info padding-top matches card margin-bottom */
  .featured-collections__info {
    padding-top: 24px;                        /* RAPHA EXACT */
    text-align: center;
  }

  /* RAPHA EXACT: 14px/600/uppercase/0.3px */
  .featured-collections__title {
    font-family: 'DM Sans', sans-serif;
    font-size: 14px;                          /* RAPHA EXACT */
    font-weight: 600;                         /* RAPHA EXACT */
    text-transform: uppercase;
    letter-spacing: 0.3px;                    /* RAPHA EXACT */
    color: #000000;
    margin: 0;
  }

  /* Product count - small body style */
  .featured-collections__count {
    display: block;
    font-family: 'DM Sans', sans-serif;
    font-size: 12px;
    font-weight: 400;
    line-height: 21px;
    color: #6B6B6B;
    margin-top: 8px;
  }

  /* Footer / View All */
  .featured-collections__footer {
    text-align: center;
    margin-top: 32px;
  }

  /* RAPHA: text link style - 12px/600/underlined */
  .featured-collections__view-all {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-family: 'DM Sans', sans-serif;
    font-size: 12px;                          /* RAPHA EXACT */
    font-weight: 600;                         /* RAPHA EXACT */
    color: #000000;
    text-decoration: underline;
    text-underline-offset: 4px;
    transition: color 0.15s ease-out;
  }

  .featured-collections__view-all:hover {
    color: #2D5A3D;                           /* Qor green */
  }
</style>

{% schema %}
{
  "name": "Featured Collections",
  "tag": "section",
  "class": "section-featured-collections",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "overline",
      "label": "Overline",
      "default": "Shop by Category"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collections"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns (desktop)",
      "options": [
        { "value": "2", "label": "2 columns" },
        { "value": "3", "label": "3 columns" }
      ],
      "default": "3"
    },
    {
      "type": "header",
      "content": "View all link"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show view all link",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "Link label",
      "default": "View All Collections"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "Link URL"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "custom_image",
          "label": "Custom image",
          "info": "Overrides the collection image"
        },
        {
          "type": "text",
          "id": "custom_title",
          "label": "Custom title",
          "info": "Overrides the collection title"
        },
        {
          "type": "checkbox",
          "id": "show_product_count",
          "label": "Show product count",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collections",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
